<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#416675">

    <TextView
        android:id="@+id/activity_about_us_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_left_arrow"
        android:drawablePadding="10dp"
        android:text="About us"
        android:textColor="#C2BD63"
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="returnMain"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/activity_about_us_person1"
        android:paddingTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_abous_us_icon_foreground"
        app:layout_constraintTop_toBottomOf="@id/activity_about_us_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/activity_about_us_person2"

        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/activity_about_us_person2"
        android:paddingTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_abous_us_icon_foreground"
        app:layout_constraintTop_toBottomOf="@id/activity_about_us_main"
        app:layout_constraintStart_toEndOf="@id/activity_about_us_person1"
        app:layout_constraintEnd_toStartOf="@id/activity_about_us_person3"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/activity_about_us_person3"
        android:paddingTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_abous_us_icon_foreground"
        app:layout_constraintTop_toBottomOf="@id/activity_about_us_main"
        app:layout_constraintStart_toEndOf="@id/activity_about_us_person2"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/activity_about_us_label_person1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dieguito"
        android:textSize="25dp"
        android:textColor="#C2BD63"
        app:layout_constraintTop_toBottomOf="@id/activity_about_us_person1"
        app:layout_constraintStart_toStartOf="@id/activity_about_us_person1"
        app:layout_constraintEnd_toEndOf="@id/activity_about_us_person1"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/activity_about_us_label_person2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Javi"
        android:textSize="25dp"
        android:textColor="#C2BD63"
        app:layout_constraintTop_toBottomOf="@id/activity_about_us_person2"
        app:layout_constraintStart_toStartOf="@id/activity_about_us_person2"
        app:layout_constraintEnd_toEndOf="@id/activity_about_us_person2"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/activity_about_us_label_person3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rosendo"
        android:textSize="25dp"
        android:textColor="#C2BD63"
        app:layout_constraintTop_toBottomOf="@id/activity_about_us_person3"
        app:layout_constraintStart_toStartOf="@id/activity_about_us_person3"
        app:layout_constraintEnd_toEndOf="@id/activity_about_us_person3"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/activity_about_us_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:textSize="20dp"
        android:textColor="#C2BD63"
        app:layout_constraintTop_toBottomOf="@id/activity_about_us_label_person1"
        app:layout_constraintStart_toStartOf="@id/activity_about_us_label_person1"
        app:layout_constraintEnd_toEndOf="@id/activity_about_us_label_person3"
        android:text="Este es un texto largo y mamalon en el cual cuando
        encuentre las palabras necesarias (probablemente borracho) ponga algo bonito"
        android:paddingHorizontal="20dp"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/capelteam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cAPPelTeam"
        android:textSize="30dp"
        android:textColor="#C2BD63"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="120dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>